<!--pages/Modify/modify.wxml-->
<view class="weui-cell ">
  <view class="weui-cell__hd">
    <view class="weui-label">姓名</view>
  </view>
  <view class="weui-cell__bd">
    <input class="weui-input" bindinput="updname" placeholder="请输入姓名" />
  </view>
</view>

<view class="weui-cell ">
  <view class="weui-cell__hd">
    <view class="weui-label">学号</view>
  </view>
  <view class="weui-cell__bd">
    <input class="weui-input" bindinput="updnumber" placeholder="请输入学号" />
  </view>
</view>

<view class="weui-cell ">
  <view class="weui-cell__hd">
    <view class="weui-label">性别</view>
  </view>
  <view class="weui-cell__bd">
    <input class="weui-input" bindinput="updsex" placeholder="请输入性别" />
  </view>
</view>

<view class="weui-cell ">
  <view class="weui-cell__hd">
    <view class="weui-label">学院</view>
  </view>
  <view class="weui-cell__bd">
    <!-- <input class="weui-input" bindinput="updacademy" placeholder="请输入学院" /> -->
    <picker bindchange="bindAcademyChange" value="{{index}}" range="{{academyArray}}">
      <view class="picker">
        {{academyArray[index]}}
      </view>
    </picker>
     
  </view>
</view>

<view class="weui-cell ">
  <view class="weui-cell__hd">
    <view class="weui-label">专业</view>
  </view>
  <view class="weui-cell__bd">
    <picker bindchange="bindMajorChange" value="{{index1}}" range="{{majorArray[index]}}">
      <view class="picker">
        {{majorArray[index][index1]}}
      </view>
    </picker>
  </view>
</view>

<view class="divLine"></view>

<button class="weui-btn" type="primary" bindtap="modifyInfo">提交</button>
