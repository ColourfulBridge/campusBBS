<!--pages/post/post.wxml-->
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__bd">
      <textarea class="weui-textarea" placeholder="请输入文本" style="height:9em" maxlength="200" auto-focus bindinput="userInput" controlled="{{true}}" value="{{content}}" open-type="getUserInfo"/>
      <view class="weui-textarea-counter">{{length}}/200</view>
    </view>
  </view>
</view>

<button bindtap="commitPost" class="weui-btn" type="default" size="mini"><image src='/images/fasong.png' style="margin-button:4px;margin-left:4px;vertical-align: middle;width:40px; height: 40px;"></image></button>
